{
  "name": "shandy-club",
  "version": "1.0.0",
  "description": "Shandy Club",
  "main": "server.bundle.js",
  "engines": {
    "node": "~6.2.0"
  },
  "pre-commit": {
    "run": [
      "test",
      "lint"
    ],
    "silent": true
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ],
    "env": {
      "production": {
        "presets": [
          "es2015",
          "react",
          "react-optimize",
          "stage-2"
        ]
      }
    }
  },
  "scripts": {
    "test": "babel-node test | faucet",
    "lint": "npm run lint:css & npm run lint:js",
    "lint:css": "stylelint --config config/.stylelintrc.js app/client/css/**/*.css",
    "lint:js": "eslint --config config/.eslintrc.js app/",
    "generate": "gulp generate --gulpfile tasks/gulpfile.babel.js",
    "db": "npm-run mongo-express -u admin -p admin -d shandyclub",
    "start": "per-env",
    "start:development": "webpack-dev-server --config config/webpack.config.dev.js & webpack --watch --config config/webpack.config.server.js --colors & NODE_ENV=development nodemon -w public --exec babel-node public/server.bundle.js",
    "start:production": "node server.bundle.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "NODE_ENV=production webpack --config config/webpack.config.prod.js --progress --profile --colors",
    "build:server": "webpack --config config/webpack.config.server.js",
    "deploy": "npm run build && modulus deploy -p shandyclub public/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShandyClub/shandy-club-app.git"
  },
  "keywords": [
    "shandy",
    "club",
    "beer",
    "pubs"
  ],
  "author": "Luke Hedger <luke.hedger@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShandyClub/shandy-club-app/issues"
  },
  "homepage": "http://shandy.club/",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-2": "^6.5.0",
    "clean-webpack-plugin": "^0.1.8",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "eslint": "^3.2.2",
    "eslint-config-unlease": "^3.0.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-react": "^6.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "faucet": "0.0.1",
    "file-loader": "^0.9.0",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-template": "^3.1.0",
    "html-webpack-plugin": "^2.21.0",
    "image-webpack-loader": "^1.8.0",
    "inquirer": "^0.12.0",
    "mongo-express": "^0.30.59",
    "nodemon": "^1.9.2",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.8.1",
    "pre-commit": "^1.1.3",
    "style-loader": "^0.13.0",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^13.0.2",
    "tape": "^4.4.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "classnames": "^2.2.3",
    "co": "^4.6.0",
    "express": "^4.14.0",
    "http-proxy": "^1.14.0",
    "immutable": "^3.7.6",
    "mapbox": "^1.0.0-beta1",
    "mongoose": "^4.5.3",
    "mongoose-simple-random": "^0.3.3",
    "node-uuid": "^1.4.7",
    "normalize.css": "^4.1.1",
    "per-env": "^1.0.2",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.2",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.2",
    "redux": "^3.4.0",
    "redux-immutablejs": "0.0.8",
    "redux-logger": "^2.6.1",
    "redux-saga": "^0.11.0",
    "regenerator-runtime": "^0.9.5",
    "reselect": "^2.3.0"
  }
}
