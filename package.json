{
  "name": "shandy-club",
  "version": "1.0.0",
  "description": "Shandy Club application",
  "main": "server.bundle.js",
  "engines": {
    "node": "~6.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ],
    "env": {
      "production": {
        "presets": [
          "es2015",
          "react",
          "react-optimize",
          "stage-2"
        ]
      }
    }
  },
  "scripts": {
    "test": "babel-node test/index.js | faucet",
    "lint": "npm run lint:css & npm run lint:js",
    "lint:css": "stylelint --config config/.stylelintrc.js app/client/css/**/*.css; exit 0",
    "lint:js": "eslint --config config/.eslintrc.js app/; exit 0",
    "generate": "gulp generate",
    "start": "per-env",
    "start:development": "webpack-dev-server --config config/webpack.config.dev.js",
    "start:production": "node server.bundle.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "NODE_ENV=production webpack --config config/webpack.config.prod.js --progress --profile --colors",
    "build:server": "webpack --config config/webpack.config.server.js",
    "deploy": "modulus deploy -p shandyclub public/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShandyClub/shandy-club-app.git"
  },
  "keywords": [
    "shandy",
    "club",
    "beer",
    "pubs"
  ],
  "author": "Luke Hedger <luke.hedger@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShandyClub/shandy-club-app/issues"
  },
  "homepage": "http://shandy.club/",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-2": "^6.5.0",
    "clean-webpack-plugin": "^0.1.8",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.2.0",
    "eslint-config-unlease": "^2.0.0",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-react": "^4.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "faucet": "0.0.1",
    "file-loader": "^0.9.0",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-template": "^3.1.0",
    "html-webpack-plugin": "^2.21.0",
    "image-webpack-loader": "^1.8.0",
    "inquirer": "^0.12.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.8.1",
    "style-loader": "^0.13.0",
    "stylelint": "^4.4.0",
    "stylelint-config-standard": "^3.0.0",
    "tape": "^4.4.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "classnames": "^2.2.3",
    "express": "^4.14.0",
    "immutable": "^3.7.6",
    "normalize.css": "^4.1.1",
    "per-env": "^1.0.2",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.2",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.2",
    "redux": "^3.4.0",
    "redux-immutablejs": "0.0.8",
    "redux-logger": "^2.6.1",
    "reselect": "^2.3.0"
  }
}
