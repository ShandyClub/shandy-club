{
  "name": "shandy-club",
  "version": "1.0.0",
  "description": "Shandy Club application",
  "main": "index.js",
  "scripts": {
    "test": "babel-node test/index.js | faucet",
    "lint-css": "stylelint --config .stylelintrc.js client/css/**/*.css; exit 0",
    "lint-js": "eslint --env es6 universal/ client/; exit 0",
    "lint": "npm run lint-css & npm run lint-js",
    "generate": "gulp generate",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --config webpack/dev.config.js",
    "start:prod": "npm run build && node public/server.bundle.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "NODE_ENV=production webpack --config webpack/prod.config.js --progress --profile --colors",
    "build:server": "webpack --config webpack/server.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ShandyClub/shandy-club-app.git"
  },
  "keywords": [
    "shandy",
    "club",
    "beer",
    "pubs"
  ],
  "author": "Luke Hedger <luke.hedger@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ShandyClub/shandy-club-app/issues"
  },
  "homepage": "http://shandy.club/",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "clean-webpack-plugin": "^0.1.8",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-react": "^4.1.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "faucet": "0.0.1",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-template": "^3.1.0",
    "if-env": "^1.0.0",
    "inquirer": "^0.12.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.8.1",
    "style-loader": "^0.13.0",
    "stylelint": "^4.4.0",
    "stylelint-config-standard": "^3.0.0",
    "tape": "^4.4.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "classnames": "^2.2.3",
    "normalize.css": "^4.0.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.2",
    "react-router": "^2.0.0",
    "react-router-redux": "^4.0.2",
    "redux": "^3.4.0",
    "redux-logger": "^2.6.1",
    "reselect": "^2.3.0"
  }
}
